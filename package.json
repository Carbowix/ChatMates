{
  "name": "chatmates",
  "version": "1.0.0",
  "description": "A simple online chatting platform for texting your friends",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "prisma generate && prisma db push && next build",
    "start": "next start",
    "serve": "NODE_ENV=production next start --port 3000",
    "lint": "next lint",
    "postinstall": "prisma generate",
    "prisma:studio": "prisma studio",
    "prisma:push": "prisma db push --accept-data-loss",
    "clean": "rm -rf node_modules"
  },
  "dependencies": {
    "@auth/prisma-adapter": "^1.0.2",
    "@prisma/client": "5",
    "@types/node": "^18.11.9",
    "@types/react": "^18.0.25",
    "bcrypt": "^5.1.0",
    "next": "^13.4.2",
    "next-auth": "^4.22.1",
    "pusher": "^5.1.3",
    "pusher-js": "^8.3.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hot-toast": "^2.4.1",
    "react-icons": "^4.11.0",
    "unique-username-generator": "^1.2.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "autoprefixer": "^10.4.4",
    "eslint": "8.11.0",
    "eslint-config-next": "^13.0.5",
    "postcss": "^8.4.12",
    "prettier": "^3.0.3",
    "prisma": "5",
    "tailwindcss": "^3.0.23",
    "typescript": "^4.6.2"
  }
}
